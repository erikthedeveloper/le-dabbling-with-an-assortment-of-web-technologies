<div>
  <% if flash[:alert] %>
      <div data-alert class="alert-box info">
        <%= flash[:alert] %>
        <a href="#" class="close">&times;</a>
      </div>
  <% end %>
  <% if flash[:notice] %>
      <div data-alert class="alert-box info warning">
        <%= flash[:notice] %>
        <a href="#" class="close">&times;</a>
      </div>
  <% end %>
</div>